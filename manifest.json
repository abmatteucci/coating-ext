{
    "manifest_version": 3,
    "name": "COAT-Ext",
    "version": "0.0.0.1",
    "description": "Coat team extension for Microsoft Edge.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "https://cdn.jsdelivr.net/npm/chart.js",
        "https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css",
        "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css",
        "https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-annotation/3.0.1/chartjs-plugin-annotation.min.js",
        "https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js",
        "https://cdn.jsdelivr.net/npm/@event-calendar/build@2.4.1/event-calendar.min.css",
        "https://cdn.jsdelivr.net/npm/@event-calendar/build@2.4.1/event-calendar.min.js"
      ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}